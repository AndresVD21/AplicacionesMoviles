<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_estadisticas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.trivia.andresvd.trivia.EstadisticasActivity"
    android:background="@drawable/b2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b4"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/P4"
        android:layout_alignBottom="@+id/P4"
        android:layout_centerHorizontal="true"
        android:text="1"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/m2"
        android:textSize="18sp"
        android:textAlignment="center"
        android:text="6"
        android:layout_alignBaseline="@+id/b2"
        android:layout_alignBottom="@+id/b2"
        android:layout_alignLeft="@+id/m4"
        android:layout_alignStart="@+id/m4"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b2"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="1"
        android:layout_alignBaseline="@+id/P2"
        android:layout_alignBottom="@+id/P2"
        android:layout_alignLeft="@+id/b3"
        android:layout_alignStart="@+id/b3"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <TextView
        android:text="Malas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp"
        android:id="@+id/textView6"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b1"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="1"
        android:layout_alignBaseline="@+id/P1"
        android:layout_alignBottom="@+id/P1"
        android:layout_alignLeft="@+id/b2"
        android:layout_alignStart="@+id/b2"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/m1"
        android:textSize="18sp"
        android:textAlignment="center"
        android:text="6"
        android:layout_alignBaseline="@+id/b1"
        android:layout_alignBottom="@+id/b1"
        android:layout_alignLeft="@+id/m2"
        android:layout_alignStart="@+id/m2"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b3"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="1"
        android:layout_alignBaseline="@+id/P3"
        android:layout_alignBottom="@+id/P3"
        android:layout_alignLeft="@+id/b4"
        android:layout_alignStart="@+id/b4"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/m4"
        android:textSize="18sp"
        android:textAlignment="center"
        android:text="6"
        android:layout_alignBaseline="@+id/b4"
        android:layout_alignBottom="@+id/b4"
        android:layout_alignLeft="@+id/m3"
        android:layout_alignStart="@+id/m3"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/m3"
        android:textSize="18sp"
        android:textAlignment="center"
        android:text="6"
        android:layout_alignBaseline="@+id/b3"
        android:layout_alignBottom="@+id/b3"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <TextView
        android:text="Pregunta 4:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/P4"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/P3"
        android:layout_alignStart="@+id/P3"
        android:layout_marginBottom="125dp" />

    <TextView
        android:text="Pregunta 1:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:id="@+id/P1"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_above="@+id/b2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp" />

    <TextView
        android:text="Pregunta 2:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/P2"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/m3"
        android:layout_alignLeft="@+id/P1"
        android:layout_alignStart="@+id/P1" />

    <TextView
        android:text="Pregunta 3:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/P3"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/P4"
        android:layout_alignLeft="@+id/P2"
        android:layout_alignStart="@+id/P2" />

    <TextView
        android:text="Buenas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_above="@+id/b1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

    <Button
        android:text="Volver a intentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volver"
        android:layout_below="@+id/b4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Estadisticas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/estadisticas"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="68dp"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />
</RelativeLayout>
